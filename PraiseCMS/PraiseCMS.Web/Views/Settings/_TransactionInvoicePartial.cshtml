@model  PraiseCMS.DataAccess.Models.SubscriptionTransactionVM
@using PraiseCMS.DataAccess.Singletons;
<html>
<head>
    <link href="@Server.MapPath("/Content/assets/css/style.bundle.css")" rel="stylesheet">
</head>
<body style="background-color:#ffffff !important">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center py-8 px-8 py-md-27 px-md-0">
                <div class="col-md-9">
                    <div class="d-flex justify-content-between pb-10 pb-md-20 flex-column flex-md-row">
                        <h1 class="display-4 font-weight-boldest mb-10">Invoice</h1>
                        <div class="d-flex flex-column align-items-md-center px-0">
                            <a href="/" class="brand-logo">
                                <img alt="Logo" src="@ApplicationCache.Instance.SiteConfiguration.Url/Content/assets/media/logos/praise_logo.png">
                            </a>
                            <span class="d-flex flex-column text-center" style="float:right;">
                                <span class="font-weight-bolder mb-2">@Model.Church.Display</span><br />
                                <span class="font-weight-bold">EIN: @Model.Church.TaxIdNumber</span><br />
                                <span>@Model.Church.PhysicalAddress1</span><br />
                                <span>@Model.Church.PhysicalAddress2</span><br />
                                <span>Phone: @Model.Church.Phone</span><br />
                                <span>@Model.Church.Email</span>
                            </span>
                        </div>
                    </div>
                    <div class="border-bottom w-100"></div>
                    <div class="d-flex justify-content-between pt-6">
                        <div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolder mb-2">SERVICE PERIOD</span><br />
                            <span class="opacity-70">@Model.Transaction.TransactionDate.ToShortDateString() - @(Model.Transaction.BillingType.Equals(BillingType.Monthly) ? Model.Transaction.TransactionDate.AddMonths(1).AddDays(-1).ToShortDateString(): Model.Transaction.TransactionDate.AddYears(1).AddDays(-1).ToShortDateString())</span>
                        </div>
                        @*<div class="d-flex flex-column flex-root">
                            <span class="font-weight-bolder mb-2">CREATED ON</span><br />
                            <span class="opacity-70">@DateTime.Now</span>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0 mt-2">
                <div class="col-md-9">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th class="text-left pl-0 font-weight-bold text-muted text-uppercase">TRANSACTION DATE</th>
                                <th class="text-left font-weight-bold text-muted text-uppercase">BILLING TYPE</th>
                                <th class="text-center font-weight-bold text-muted text-uppercase">AMOUNT</th>
                                <th class="text-left pr-0 font-weight-bold text-muted text-uppercase">PAYMENT METHOD</th>
                                <th class="text-center pr-0 font-weight-bold text-muted text-uppercase">TRANSACTION ID</th>
                            </tr>
                            <tbody>
                                <tr>
                                    <td class="pl-0 text-left">@Model.Transaction.TransactionDate.ToShortDateString()</td>
                                    <td class="text-left">@Model.Transaction.BillingType</td>
                                    <td class="pr-0 text-center">@Model.Transaction.Amount.ToCurrencyString()</td>
                                    <td class="text-left">@Model.Transaction.PaymentMethod</td>
                                    <td class="text-center">@Model.Transaction.TransactionId</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>