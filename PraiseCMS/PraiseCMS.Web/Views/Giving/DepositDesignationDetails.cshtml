                @if (Model.IsNotNullOrEmpty() && Model.DepositDetails.Any())
                {
                    <div class="separator separator-dashed my-5"></div>
                    <table id="my_table" class="table table-striped table-bordered table-responsive-lg table-responsive-md table-responsive-sm table-responsive-xl" style="width:100%">
                        <thead>
                            <tr>
                                <th>Deposit Id</th>
                                <th>Transaction Date</th>
                                <th>Settlement Date</th>
                                <th>Deposit Date</th>
                                <th>Transaction Id</th>
                                <th>Allocation Id</th>
                                <th>Donor Id</th>
                                <th>Amount</th>
                                <th>Fee Amount</th>
                                <th>Net Amount</th>
                                <th>Status</th>
                                <th>AccountType</th>
                                <th>Designtation Id</th>
                                <th>Designation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.DepositDetails)
                            {
                                <tr>
                                    <td>
                                        @detail.DepositID
                                    </td>
                                    <td>
                                        @detail.TransactionDate
                                    </td>
                                    <td>
                                        @detail.SettlementDate
                                    </td>
                                    <td>
                                        @detail.DepositDate
                                    </td>
                                    <td>
                                        @detail.TransactionID
                                    </td>
                                    <td>
                                        @detail.AllocationID
                                    </td>
                                    <td>
                                        @detail.DonorID
                                    </td>
                                    <td>
                                        @detail.Amount
                                    </td>
                                    <td>
                                        @detail.FeeAmount
                                    </td>
                                    <td>
                                        @detail.NetAmount
                                    </td>
                                    <td>
                                        @detail.Status
                                    </td>
                                    <td>
                                        @detail.AccountType
                                    </td>
                                    <td>
                                        @detail.DesignationID
                                    </td>
                                    <td>
                                        @detail.DesignationID
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No deposit designation detail records were found.</p>
                }
