@model PraiseCMS.DataAccess.Models.SupportEmail
<div id="support-email-div">
    <p>Need help? Send us a detailed message and we will get back to you as soon as possible.</p>
    @using (Ajax.BeginForm(RouteHelpers.CurrentAction, RouteHelpers.CurrentController, new AjaxOptions() { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "support-email-div" }, new { @class = "kt-form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Name:</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "First & Last Name" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Email:</label>
            @Html.TextBoxFor(x => x.FromEmail, new { type = "email", @class = "form-control", placeholder = "Enter an email" })
            @Html.ValidationMessageFor(x => x.FromEmail, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Phone:</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control phone", placeholder = "(555) 555-5555" })
            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Priority:</label>
            @Html.DropDownListFor(x => x.Priority, Priorities.Items.ToSelectList(x => x), new { @class = "form-control select2", style = "width:100%;" })
            @Html.ValidationMessageFor(x => x.Priority, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Message:</label>
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "How can we help?", rows = "5" })
            @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
        </div>
    }
</div>