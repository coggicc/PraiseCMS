@model PraiseCMS.DataAccess.Models.ApplicationRoles

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">
        @(Model.Id == null ? "Add New Role" : "Edit Role")
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    </button>
</div>
<div class="modal-body">
    <input type="hidden" value="@Model.Id" id="id" />
    <div class="form-group">
        <label for="recipient-name" class="form-control-label">Name:</label>
        <input type="text" class="form-control" name="Name" id="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="message-text" class="form-control-label">Description:</label>
        <textarea class="form-control" name="Description" id="description">@Model.Description</textarea>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-light-dark font-weight-bold" data-dismiss="modal">Close</button>
    <button type="button" class="addEditRole btn btn-primary">Save</button>
</div>