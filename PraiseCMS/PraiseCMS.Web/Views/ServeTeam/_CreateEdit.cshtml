@model PraiseCMS.DataAccess.Models.ServeTeamMemberView

<div id="serve-team-member-div">
    @using (Ajax.BeginForm(RouteHelpers.CurrentAction, RouteHelpers.CurrentController, new AjaxOptions() { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "serve-team-member-div" }, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.TeamMember.Id)
        @Html.HiddenFor(x => x.TeamMember.ChurchId)
        @Html.HiddenFor(x => x.TeamMember.CreatedBy)
        @Html.HiddenFor(x => x.TeamMember.CreatedDate)
        <div class="form-group">
            <label>Campus:</label>
            @Html.DropDownListFor(x => x.TeamMember.CampusId, SessionVariables.Campuses.ToSelectList(x => x.Display, x => x.Id), "Select a campus...", new { @class = "form-control select2", style = "width:100%;" })
            @Html.ValidationMessageFor(x => x.TeamMember.CampusId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Service Area:</label>
            @Html.DropDownListFor(x => x.TeamMember.ServiceAreaId, Model.ServiceAreas.ToSelectList(x => x.Display, x => x.Id), "Select a service area...", new { @class = "form-control select2", style = "width:100%;" })
            @Html.ValidationMessageFor(x => x.TeamMember.ServiceAreaId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>User:</label>
            @Html.DropDownListFor(x => x.TeamMember.UserId, Model.Users.ToSelectList(x => x.Display, x => x.Id), "Select a user...", new { @class = "form-control select2", style = "width:100%;" })
            @Html.ValidationMessageFor(x => x.TeamMember.UserId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="col-lg-3 col-form-label">Is Active?</label>
            <div class="col-lg-9">
                <span class="switch switch-icon">
                    <label>
                        @Html.CheckBoxFor(x => x.TeamMember.IsActive, new { name = "IsActive" })
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
    }
</div>