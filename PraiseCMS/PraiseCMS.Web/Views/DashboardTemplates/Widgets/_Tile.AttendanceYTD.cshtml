@using PraiseCMS.Shared.Methods
@model PraiseCMS.DataAccess.Models.ViewModels.DashboardViewModel
@{
    var attendance = 0;

    if (Model.Attendance.IsNotNull() && Model.Attendance.Count > 0)
    {
        attendance = Model.Attendance.Sum(x => x.Total);
    }
}

<a href="reports/attendancesummary" class="card card-custom bg-info bg-hover-state-info gutter-b" data-toggle="tooltip" data-placement="top" title="View Attendance Summary">
    <div class="card-body">
        <i class="fa fa-users fa-2x text-white"></i>
        <span class="card-title font-weight-bolder text-white font-size-h3 mb-0 mt-6 d-block">@attendance.ToNumberString()</span>
        <span class="font-weight-bold text-white">Attendance - YTD</span>
    </div>
</a>