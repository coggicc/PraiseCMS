@using PraiseCMS.Shared.Methods
@model PraiseCMS.DataAccess.Models.ViewModels.DashboardViewModel
@{
    var prayerRequests = 0;

    if (Model.PrayerRequests.IsNotNull() && Model.PrayerRequests.Count > 0)
    {
        prayerRequests = Model.PrayerRequests.Count();
    }
}

<a href="reports/prayerrequestsummary" class="card card-custom bg-warning bg-hover-state-warning gutter-b" data-toggle="tooltip" data-placement="top" title="View Prayer Requests Summary">
    <div class="card-body">
        <i class="fa fa-praying-hands fa-2x text-white"></i>
        <span class="card-title font-weight-bolder text-white font-size-h3 mb-0 mt-6 d-block">@prayerRequests.ToNumberString()</span>
        <span class="font-weight-bold text-white">Prayer Requests - YTD</span>
    </div>
</a>