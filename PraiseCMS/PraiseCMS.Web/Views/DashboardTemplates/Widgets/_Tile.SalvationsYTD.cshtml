@using PraiseCMS.Shared.Methods
@model PraiseCMS.DataAccess.Models.ViewModels.DashboardViewModel
@{
    var salvations = 0;

    if (Model.Salvations.IsNotNull() && Model.Salvations.Count > 0)
    {
        salvations = Model.Salvations.Sum(x => x.Total);
    }
}

<a href="reports/salvationsummary" class="card card-custom bg-primary bg-hover-state-primary gutter-b" data-toggle="tooltip" data-placement="top" title="View Salvation Summary">
    <div class="card-body">
        <i class="fa fa-cross fa-2x text-white"></i>
        <span class="card-title font-weight-bolder text-white font-size-h3 mb-0 mt-6 d-block">@salvations.ToNumberString()</span>
        <span class="font-weight-bold text-white">Salvations - YTD</span>
    </div>
</a>