@model PraiseCMS.DataAccess.Models.SermonTopic

<div id="sermontopic-div">
    @using (Ajax.BeginForm(RouteHelpers.CurrentAction, RouteHelpers.CurrentController, new AjaxOptions() { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sermontopic-div" }, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
    <div class="kt-section kt-section--first">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.CreatedBy)
        @Html.HiddenFor(x => x.CreatedDate)

        <div class="kt-section__body">
            <div class="form-group row">
                @Html.LabelFor(x => x.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    }
</div>