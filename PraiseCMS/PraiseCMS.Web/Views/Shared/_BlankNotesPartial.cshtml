@model PraiseCMS.DataAccess.Models.Church
@using PraiseCMS.DataAccess.Singletons;
<style>
    .line {
        margin-bottom: 2rem !important;
    }

    .space {
        margin-top: 3rem !important;
    }

    .border {
        border-bottom: 1px solid !important;
    }
</style>
<div class="page" id="sermonnotes-div">
    <div class="kt-section kt-section--first">
        <div class="kt-section__body">
            <table style="width:100%">
                <tbody>
                    <tr>
                        <td style="width:47%;padding-left:3%;">
                            @if (Model?.Logo != null)
                            {
                                <img src="@Html.AmazonLink(Model.Logo, "Uploads/Logos")" height="50" class="mx-2 w-auto" />
                            }
                            else
                            {
                                <img src="@ApplicationCache.Instance.SiteConfiguration.Url/Content/assets/image/highlands_logo.png" height="50" class="mx-2 w-auto" />
                            }
                            <hr />
                            <br />
                        </td>
                        <td style="width:6%"></td>
                        <td style="width:47%;padding-right: 3%;">
                            <img height="50" class="mx-2 w-auto" />
                            <hr />
                            <br />
                        </td>
                    </tr>
                    @{
                        var space = true;
                        var linesCount = 14;
                    }
                    @for (var i = 1; i <= 14; i++)
                    {
                        <tr>
                            <td style="width:47%;padding-left: 3%;">
                                <p class=" border @(space ? "space" :"")  @(i<linesCount ? "line" :"")"></p>
                                <br />
                            </td>
                            <td style="width:6%"></td>
                            <td style="width:47%;padding-right: 3%;">
                                <p class="border @(space ? "space" :"") @(i<linesCount ? "line" :"")"></p>
                                <br />
                            </td>
                        </tr>
                        space = false;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>