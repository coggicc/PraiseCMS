@model PraiseCMS.DataAccess.Models.Fund

@{
    ViewBag.Title = Model.Display + " Fund Details";
}

<div class="card card-custom">
    <div class="card-header py-3">
        <div class="card-title align-items-start flex-column">
            <h3 class="card-label font-weight-bolder text-dark">@ViewBag.Title</h3>
        </div>
        <div class="card-toolbar">
            <a href="/funds" class="btn btn-light-primary mr-2">Back</a>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Name:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.Display</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Description:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.Description</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Designation Id:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.DesignationId</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Fund Id:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.Id</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Created Date:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.CreatedDate.ToShortDateString()</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Created By:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@Model.CreatedBy</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Tax Deductible:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@(Model.IsTaxDeductible ? "Yes" : "No")</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Closed:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@(Model.Closed ? "Yes" : "No")</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Hidden:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@(Model.Hidden ? "Yes" : "No")</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Expiration Date:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@(Model.ExpirationDate != null ? Convert.ToDateTime(Model.ExpirationDate).ToShortDateString() : "")</p>
            </div>
        </div>
        <div class="form-group row my-2">
            <label class="col-4 col-form-label">Default Fund:</label>
            <div class="col-8">
                <p class="form-control-static" style="margin-top:10px;">@(Model.IsDefaultFund ? "Yes" : "No")</p>
            </div>
        </div>
    </div>
</div>