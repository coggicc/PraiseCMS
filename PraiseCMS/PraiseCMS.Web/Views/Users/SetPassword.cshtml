@model PraiseCMS.DataAccess.Models.SetPasswordViewModel
@{
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
    ViewBag.Title = "Create Password";
}

<div class="mb-10">
    <h3>Welcome to Praise CMS!</h3>
    <div class="text-muted font-weight-bold">Create a password for your account:</div>
</div>

@using (Html.BeginForm("SetPassword", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.UserId)
    <div class="form-group row mb-5">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control h-auto form-control-solid py-4 px-8", name = "password", placeholder = "Password", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "float-left mb-5" })
    </div>
    <div class="form-group row mb-5">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control h-auto form-control-solid py-4 px-8", placeholder = "Confirm Password", autocomplete = "current-password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "float-left mb-5" })
    </div>
    <div class="form-group row">
        <div class="col-12">
            <input type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4" value="Next" />
        </div>
    </div>
}