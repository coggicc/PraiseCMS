@model IEnumerable<PraiseCMS.DataAccess.Models.Denomination>

@{
    ViewBag.Title = "Denominations";
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                <i class="fa fa-cross text-primary"></i>
                @ViewBag.Title
            </h3>
        </div>
        <div class="card-toolbar">
            @Html.AjaxModalLink("Add Denomination", "/denominations/_adddenomination", "Add Denomination", "Save", "btn btn-light-primary font-weight-bold", "")
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.AjaxModalLink(item.Name, "/denominations/_EditDenomination/" + item.Id, "Edit Denomination", "Save", "", "", "/denominations/delete/" + item.Id)
                                </td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>You don't have any denominations yet. Want to create one?</tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>