<div class="card card-custom">
    <div class="card-body px-5">
        <div class="card-scroll">
            <div class="navi navi-hover navi-active navi-link-rounded navi-bold navi-icon-center navi-light-icon">
                <div class="navi-item my-2">
                    <a href="/logs/loghistory?logsType=@LogType.Inbox" class="navi-link @(ViewBag.LogType==LogType.Inbox ? "active" : "" )">
                        <span class="navi-icon mr-4">
                            <i class="fas fa-inbox text-primary"></i>
                        </span>
                        <span class="navi-text font-weight-bolder font-size-lg">Inbox</span>
                    </a>
                </div>
                <div class="navi-item my-2">
                    <a href="/logs/loghistory?logsType=@LogType.Error" class="navi-link @(ViewBag.LogType==LogType.Error ? "active" : "" )">
                        <span class="navi-icon mr-4">
                            <i class="fa fa-exclamation-circle text-danger"></i>
                        </span>
                        <span class="navi-text font-weight-bolder font-size-lg">Errors</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>