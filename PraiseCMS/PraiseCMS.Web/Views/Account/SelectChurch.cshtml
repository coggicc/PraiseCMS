@model IEnumerable<PraiseCMS.DataAccess.Models.Church>
@{
    Layout = null;
    ViewBag.Title = "Select Church";
    var churches = Model.ToArray();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Praise CMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <link href="~/Content/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/sass/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/pages/login/login-layout/auth.assets_css_style.bundle.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/assets/image/favicon.ico" type="image/x-icon" />
    <style>
        .hovered:hover .image {
            box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
        }
    </style>
</head>
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <div class="d-flex flex-column flex-root">
        <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url('../Content/assets/media/bg/bg-3.jpg');">
                <div class="login-form text-center p-7 position-relative overflow-hidden">
                    <div class="d-flex flex-center mb-15">
                        <img src="~/Content/assets/media/logos/praise_logo.png" class="max-h-75px" alt="">
                    </div>
                    <div class="text-center">
                        <h3 class="text-dark-50">Select a church to access your account</h3>
                        <table class="my-10 w-100">
                            <tbody>
                                @for (int i = 0; i < churches.Length; i++)
                                {
                                    <tr>
                                        <td class="pb-2 text-center">
                                            <a class="hovered" href="/Account/SelectedChurch/@churches[i].Id">
                                                <div class="align-items-center">
                                                    <div class="image align-self-start align-self-xxl-center mr-5 symbol symbol-xxl-150">
                                                        @if (!string.IsNullOrEmpty(churches[i].Logo))
                                                        {
                                                            <div class="symbol-label" style="background-image:url(@Html.AmazonLink(churches[i].Logo,"Uploads/Logos"));background-size:contain;"></div>
                                                        }
                                                        else
                                                        {
                                                            <div class="symbol-label" style="background-image: url('../../Content/assets/media/logos/default_logo.png');background-size: contain;"></div>
                                                        }
                                                    </div>
                                                    <div class="font-size-h5 text-center">@churches[i].Display</div>
                                                </div>
                                            </a>
                                        </td>
                                        <td class="pb-2 text-center">
                                            @if (churches.Length > i + 1)
                                            {
                                                <a class="hovered" href="/Account/SelectedChurch/@churches[i+1].Id">
                                                    <div class="align-items-center">
                                                        <div class="image align-self-start align-self-xxl-center mr-5 symbol symbol-xxl-150">
                                                            @if (!string.IsNullOrEmpty(churches[i + 1].Logo))
                                                            {
                                                                <div class="symbol-label" style="background-image:url(@Html.AmazonLink(churches[i+1].Logo,"Uploads/Logos"));background-size:contain;"></div>
                                                            }
                                                            else
                                                            {
                                                                <div class="symbol-label" style="background-image: url('../../Content/assets/media/logos/default_logo.png');background-size: contain;"></div>
                                                            }
                                                        </div>
                                                        <div class="font-size-h5 text-center">@churches[i + 1].Display</div>
                                                    </div>
                                                </a>
                                            }
                                        </td>
                                        <td class="pb-2 text-center">
                                            @if (churches.Length > i + 2)
                                            {
                                                <a class="hovered" href="/Account/SelectedChurch/@churches[i+2].Id">
                                                    <div class="align-items-center">
                                                        <div class="image align-self-start align-self-xxl-center mr-5 symbol symbol-xxl-150">
                                                            @if (!string.IsNullOrEmpty(churches[i + 2].Logo))
                                                            {
                                                                <div class="symbol-label" style="background-image:url(@Html.AmazonLink(churches[i + 2].Logo,"Uploads/Logos"));background-size:contain;"></div>
                                                            }
                                                            else
                                                            {
                                                                <div class="symbol-label" style="background-image: url('../../Content/assets/media/logos/default_logo.png');background-size: contain;"></div>
                                                            }
                                                        </div>
                                                        <div class="font-size-h5 text-center">@churches[i + 2].Display</div>
                                                    </div>
                                                </a>
                                            }
                                        </td>
                                        <td class="pb-2 text-center">
                                            @if (churches.Length > i + 3)
                                            {
                                                <a class="hovered" href="/Account/SelectedChurch/@churches[i+3].Id">
                                                    <div class="align-items-center">
                                                        <div class="image align-self-start align-self-xxl-center mr-5 symbol symbol-xxl-150">
                                                            @if (!string.IsNullOrEmpty(churches[i + 3].Logo))
                                                            {
                                                                <div class="symbol-label" style="background-image:url(@Html.AmazonLink(churches[i + 3].Logo,"Uploads/Logos"));background-size:contain;"></div>
                                                            }
                                                            else
                                                            {
                                                                <div class="symbol-label" style="background-image: url('../../Content/assets/media/logos/default_logo.png');background-size: contain;"></div>
                                                            }
                                                        </div>
                                                        <div class="font-size-h5 text-center">@churches[i + 3].Display</div>
                                                    </div>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                    i++; i++; i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>