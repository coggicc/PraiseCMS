@{
    Layout = "";
    ViewBag.Title = "Forgot Password Confirmation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700">
    <link href="~/Content/assets/plugins/custom/fullcalendar/fullcalendar.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/custom/jstree/jstree.bundle.css" rel="stylesheet" />
    <link href="~/Content/assets/css/select2-bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/assets/sass/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <link href="~/Content/assets/css/pages/error/error-1.css" rel="stylesheet" />
    <style type="text/css">
        .kt-error-v1 .kt-error-v1__container .kt-error-v1__number {
            font-size: 40px;
            margin-top: 6rem;
        }
    </style>
</head>
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-aside--minimize kt-page--loading">
    <div class="kt-grid kt-grid--ver kt-grid--root kt-page">
        <div class="kt-grid__item kt-grid__item--fluid kt-grid  kt-error-v1">
            <div class="kt-error-v1__container">
                @if (TempData["Status"].ToString() == "Success")
                {
                    <hgroup class="title">
                        <h1 class="kt-error-v1__number">
                            Forgot Password Confirmation.
                        </h1>
                    </hgroup>
                    <p class="kt-error-v1__desc">
                        Please check your email to reset your password.
                    </p>
                }
                else if (TempData["Status"].ToString() == "Failed")
                {
                    <hgroup class="title">
                        <h1 class="kt-error-v1__number">Oops!</h1>
                    </hgroup>
                    <p class="kt-error-v1__desc">
                        The user name or email you entered does not exist
                    </p>
                }
            </div>
        </div>
    </div>
</body>
</html>