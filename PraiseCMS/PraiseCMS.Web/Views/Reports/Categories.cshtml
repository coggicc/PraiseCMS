@model IEnumerable<PraiseCMS.DataAccess.Models.ReportCategory>
@{
    ViewBag.Title = "Report Categories";
}
<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                @ViewBag.Title
            </h3>
        </div>
        <div class="card-toolbar">
            @Html.AjaxModalLink("Create New Category", "/reports/CreateCategory/", "Create New Category", "Save", "btn btn-light-primary font-weight-bold", "")
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.AjaxModalLink(item.Name, "/reports/EditCategory/" + item.Id, "Edit Report Category", "Save", "", "", "/reports/deletecategory/" + item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2">You don't have any service areas yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>