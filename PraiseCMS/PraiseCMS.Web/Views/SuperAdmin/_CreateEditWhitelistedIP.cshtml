@model PraiseCMS.DataAccess.Models.IPWhitelist

<div id="ip-whitelist-div">
    @using (Ajax.BeginForm(RouteHelpers.CurrentAction, RouteHelpers.CurrentController, new AjaxOptions() { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ip-whitelist-div" }, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.CreatedBy)
        @Html.HiddenFor(x => x.CreatedDate)
        <div class="form-group">
            <label>IP Address</label>
            @Html.TextBoxFor(x => x.IpAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.IpAddress, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    }
</div>