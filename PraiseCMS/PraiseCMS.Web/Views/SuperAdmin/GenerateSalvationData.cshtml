@model PraiseCMS.DataAccess.Models.ViewModels.SalvationInputViewModel

@{
    ViewBag.Title = "Generate Salvation Data";
}

<h2>Generate Salvation Data</h2>

@using (Html.BeginForm("GenerateSalvationData", "SuperAdmin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.ChurchId)
    <div>
        <label>Campuses</label>
        @for (int i = 0; i < Model.Campuses.Count; i++)
        {
            <div>
                <input type="checkbox"
                       name="SelectedCampusIds"
                       value="@Model.Campuses[i].Id"
                       @(Model.SelectedCampusIds.Contains(Model.Campuses[i].Id) ? "checked" : "") />
                @Model.Campuses[i].Name
            </div>
        }
    </div>

    <div>
        @Html.LabelFor(m => m.WeeksOfData)
        @Html.TextBoxFor(m => m.WeeksOfData)
    </div>

    <div>
        @Html.LabelFor(m => m.MinTotal)
        @Html.TextBoxFor(m => m.MinTotal)
    </div>

    <div>
        @Html.LabelFor(m => m.MaxTotal)
        @Html.TextBoxFor(m => m.MaxTotal)
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>
}
