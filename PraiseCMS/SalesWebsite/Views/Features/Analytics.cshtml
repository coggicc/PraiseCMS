@using System.Configuration

@{
    ViewBag.Title = "Analytics";
}

<header class="header section parallax image-background center-bottom cover overlay gradient gradient-53 alpha-8 color-1" style="background-image: url('../../Content/img/bg/grid.jpg')">
    <div class="divider-shape">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none" class="shape-waves" style="left: 0; transform: rotate3d(0,1,0,180deg);">
            <path class="shape-fill shape-fill-1" d="M790.5,93.1c-59.3-5.3-116.8-18-192.6-50c-29.6-12.7-76.9-31-100.5-35.9c-23.6-4.9-52.6-7.8-75.5-5.3c-10.2,1.1-22.6,1.4-50.1,7.4c-27.2,6.3-58.2,16.6-79.4,24.7c-41.3,15.9-94.9,21.9-134,22.6C72,58.2,0,25.8,0,25.8V100h1000V65.3c0,0-51.5,19.4-106.2,25.7C839.5,97,814.1,95.2,790.5,93.1z" />
        </svg>
    </div>
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-7">
                <h1 class="color-1 bold">
                    Analytics and Reporting
                    <span class="d-block light">Powerful data at your fingertips</span>
                </h1>
                <p class="lead">With our beautifully crafted reports, it's never been easier to set budgets and track giving, salvations, attendance, outreach efforts, and more.</p>
                <nav class="nav mt-5">
                    <a href="@($"{ConfigurationManager.AppSettings["DashboardUrl"]}Account/Register")" class="nav-link mr-3 btn btn btn-rounded btn-1">Sign up free</a>
                </nav>
                <p>No contracts. Cancel anytime.</p>
            </div>
        </div>
    </div>
</header>
<section class="perspective-mockups hidden-preload">
    <div class="tablet ipad landscape">
        <div class="screen">
            <img alt="slack" src="~/Content/img/screens/tablet/ipad_landscape.png">
        </div>
        <div class="button"></div>
    </div>
    <div class="phone-big iphone-x">
        <div class="screen">
            <img src="~/Content/img/screens/app/iphone_portrait_1.png" alt="...">
        </div>
        <div class="notch"></div>
    </div>
    <div class="phone-small iphone-x">
        <div class="screen">
            <img src="~/Content/img/screens/app/iphone_portrait_2.png" alt="...">
        </div>
        <div class="notch"></div>
    </div>
    <div class="tablet ipad portrait">
        <div class="screen">
            <img alt="kickstarter" src="~/Content/img/screens/tablet/ipad_portrait.png">
        </div>
        <div class="button"></div>
    </div>
</section>
<section class="section lightweight-template">
    <div class="container">
        <div class="row align-items-center text-center text-lg-left">
            <div class="col-md-8 col-lg-6 mr-auto">
                <h2>On-Demand Reporting<br />In Living Color</h2>
                <p class="lead color-2">View your data through modern and sophisticated graphs and tables.</p>
                <p>Built with cutting-edge technologies, your data is served in real-time and as often as you need it.</p>
                <a href="@($"{ConfigurationManager.AppSettings["DashboardUrl"]}Account/Register")" class="btn btn-accent btn-rounded mt-5 learn-more">Take a Test Drive</a>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container-wide">
        <div class="section-heading text-center">
            <h2>Essential Reporting</h2>
            <p class="lead color-2">Praise has analytics covered with a wide-array of pre-built reports.</p>
        </div>
        <div class="row gap-y align-items-center text-center text-lg-left">
            <div class="col-10 col-lg-4 mx-auto">
                <div class="row gap-y text-center text-md-left">
                    <div class="col-md-6">
                        <i class="fas fa-chart-line fa-3x color-4"></i>
                        <p class="my-0 bold lead color--4">Giving Summaries</p>
                        <p>View all donations or see it broken down by digital and offline giving.</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fas fa-piggy-bank fa-3x color-4"></i>
                        <p class="my-0 bold lead color--4">Fund & Campus Reports</p>
                        <p>Detailed giving data for multiple funds and campuses</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fas fa-users fa-3x color-4"></i>
                        <p class="my-0 bold lead color--4">Top Donors & Donations</p>
                        <p>Comprehensive Top Donors and Donations Reports</p>
                    </div>
                    <div class="col-md-6">
                        <i class="fas fa-list fa-3x color-4"></i>
                        <p class="my-0 bold lead color--4">Additional Reports</p>
                        <p>Salvations, baptisms, attendance, and so much more.</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 pr-0">
                <img src="~/Content/img/screens/GivingSummary.png" alt="" class="img-responsive shadow" data-aos="fade-left">
            </div>
        </div>
    </div>
</section>

